<!DOCTYPE html>
<html>
  <head>
    <title>Ecomm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">BlogHack</a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><a href="/users/edit"><span class="glyphicon glyphicon-user"></span> Edit Prof</a></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %><span class="glyphicon glyphicon-log-in"></span> Sign out</a></li>
        <% else %>
          <li><a href="/users/sign_up"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
          <li><a href="/users/sign_in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        <% end %>
      </ul>
    </div>
  </nav>
  <body>
  	<div class="container">
    	<%= yield %>
    </div>
  </body>
</html>
